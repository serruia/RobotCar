#ifndef	RobotCar_h
#define RobotCar_h
#include	"Arduino.h"

class RobotCar{
	public:
		RobotCar();
		void MoveMotor1(int speed, int direction);
		void MoveMotor2(int speed, int direction);
		void StopMotor1();
		void StopMotor2();
		unsigned long delayValue();
		
		
	private:
		int pwmPinMotor1;
		int pwmPinMotor2;
		int directionPinMotor1;
		int directionPinMotor2;
		int timePin;
};

#endif	
